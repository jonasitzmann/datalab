\par }\pard\plain \s27\ql \li705\ri0\sl360\slmult1\nowidctlpar\wrapdefault\faauto\rin0\lin705\itap0\pararsid12544201 \f1\fs24\lang1040\langfe1040\cgrid\langnp1040\langfenp1040 {\fs22\insrsid4613861\charrsid7801691 
