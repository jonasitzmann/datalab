\par }\pard\plain \s20\qj \li0\ri0\sa690\sl360\slmult1\nowidctlpar\wrapdefault\faauto\rin0\lin0\itap0\pararsid12544201 \f1\fs24\lang1040\langfe1040\cgrid\langnp1040\langfenp1040 {\b\fs22\insrsid4613861\charrsid7801691 XCVIII \bullet  STIVAGGIO E PULIZIA }{
