\par }\pard\plain \s15\qj \li0\ri230\widctlpar\aspalpha\aspnum\faauto\adjustright\rin230\lin0\itap0 \fs20\lang2057\langfe2057\cgrid\langnp2057\langfenp2057 {\fs18 \tab 
